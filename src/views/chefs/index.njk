{% extends "layout.njk" %}
    
{% block head %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/styles/main.css">
        <link rel="stylesheet" href="/styles/chefs.css">


        <title>FOODFY</title>
    </head>
{% endblock head %}

<div class="content">

    {% block content %}
        
    <section class="cards-admin-chef">
        {% for chef in chefs %}
            <div class="card-admin-chef" id="{{loop.index0}}">
                <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
                <h4 class="title-admin">{{chef.name}}</h4>
                <p>{{ chef.total_recipes }} Receitas</p>
                {# <a href="/admin/chefs/{{chef.id}}">Visualizar</a> #}
            </div>
        {% endfor %}
    </section>

{% endblock content %}


