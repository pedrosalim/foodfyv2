{% extends "admin/layoutAdm.njk" %}


{% block header %}
    <header class="adminHeader">
        
        <a class="logo" href="/admin/recipes/index"><img src="/assets/logo-white.png" alt="FOODFY"></a>
    </header>  
{% endblock header %}

{% block content %}



<div class="header">
    <h2>Receita: {{recipe.title}}</h2>
    <a href="#" class="button">Editar receita</a>
</div>

<section class="recipes">
    <div class="recipe_card">
        <img src="{{recipe.image_url}}" alt="Imagem de {{item.title}}">
        <h4 class="title">{{recipe.title}}</h4>
        <p class="author">{{recipe.author}}</p>
    </div>
</section>

<section class="most_information">

    <!-- INGREDIENTS -->
    <div class="recipe_ingredients content_list">
        <div class="card_title">
            <h1>Ingredientes</h1>
        </div>

        <div class="card_content">
            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- PREPARATION -->
    <div class="recipe_preparation content_list">
        <div class="card_title">
            <h1>Modo de preparo</h1>
        </div>

        <div class="card_content">
            <ul>
                {% for preparation in recipe.preparation %}
                    <li>{{preparation}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- INFORMATION -->
    <div class="recipe_information content_list">
        <div class="card_title">
            <h1>Informações adicionais</h1>
        </div>

        <div class="card_content">
        </div>
    </div>
</section>

{% endblock content %}

{% block footer %}
    <footer>
        <p>Todos os direitos reservados, receitas FOODFY.</p>
    </footer>
{% endblock %}