{% extends "admin/layoutAdm.njk" %}


{% block header %}
    <header class="adminHeader">
        <a class="logo" href="/admin/recipes/index"><img src="/assets/logo-white.png" alt="FOODFY"></a>
    </header>  
{% endblock header %}

{% block content %}

<div class="top">
    <h1>Gerenciar Receitas</h1>
    <a class="buttonCreate" href="/admin/recipes/create">Criar</a>
</div>

<section class="cards-admin">
    {% for recipe in recipes %}
        <div class="card-admin" id="{{loop.index0}}">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
            <h4 class="title-admin">{{recipe.title}}</h4>
            <p class="author-admin">{{recipe.author}}</p>
            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
    {% endfor %}
</section>

{% endblock content %} 

{% block scripts %}
    <script src="/scripts.js"></script>
{% endblock scripts %}

{% block footer %}
    <footer>
        <p>Todos os direitos reservados, receitas FOODFY.</p>
    </footer>
{% endblock %}