{% extends "admin/layoutAdm.njk" %}


{% block header %}
    <header class="adminHeader">
        <a class="logo" href="/admin/recipes/index"><img src="/assets/logo-white.png" alt="FOODFY"></a>
    </header>  
{% endblock header %}

{% block content %}

    <form action="/admin/recipes" method="POST">
        <div class="recipe_text">
            <h1>Criando receita</h1>
            <button type="submit">Salvar Receita</button>
        </div>

        <div class="item">
            <div>Imagem da Receita</div>
            <div>
                <input type="url" name="image">
            </div>
        </div>

        <div class="item">
            <div>Nome do Chef</div>
            <div>
                <input type="text" name="author">
            </div>
        </div>

        <div class="item">
            <div>Nome da Receita</div>
            <div>
                <input type="text" name="title">
            </div>
        </div>

        <div class="item">
            <div>Ingredientes</div>
            <div id="newIngredient">
                <div class="ingredient">
                    <input type="text" name="ingredients[]">
                </div>
            </div>
            <div>
                <button type="button" class="addIngredients">Adicionar novo ingrediente</button>
            </div>
        </div>

        <div class="item">
            <div>Preparação</div>
            <div id="newPreparation">
                <div class="preparation">
                    <input type="text" name="preparation[]">
                </div>
            </div>
            <div>
                <button type="button" class="addPreparations">Adicionar novo paço</button>
            </div>
        </div>

        <div class="item">
            <div>Informaçōes Adicionais</div>
            <div>
                <textarea name="information" cols="30" rows="10"></textarea>
            </div>
        </div>

    </form>

{% endblock content %}