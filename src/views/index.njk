{% extends "layout.njk" %}
    
{% block head %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/styles/main.css">

        <title>FOODFY</title>
    </head>
{% endblock head %}

<div class="content">

    {% block content %}
        
        <main class="background">
            <img class="chef" src="/assets/chef.png" alt="Chef">

            <h1>As melhores receitas</h1>

            <p>
                Aprenda a construir os melhores pratos <br>
                com receitas criadas por profissionais <br>
                do mundo inteiro.
            </p>

        </main>

        <div class="most_accessed">
            <h1>Mais acessadas</h1>
        </div>

        <section class="cards">
            {% for recipe in recipes %}
                <div class="card" id="{{recipe.id}}">
                    <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                    <h4 class="title">{{recipe.title}}</h4>
                    <p class="author">Por {{recipe.author}}</p>
                </div>
            {% endfor %}
        </section>

{% endblock content %}

{% block modal %}
<div class="modal-overlay">
    <div class="modal">
        <a class="close-modal">Fechar modal</a>

        <img src="" alt="">
        <p class="modal-title"></p>
        <p class="modal-author"></p>
    </div>    
</div>
{% endblock modal %}


</div>
    


{% block scripts %}
    <script src="/scripts.js"></script>
{% endblock scripts %}

        
{% block footer %}
    <footer>
        <p>Todos os direitos reservados, receitas FOODFY.</p>
    </footer>
{% endblock footer %}